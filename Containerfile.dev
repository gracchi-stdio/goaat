# Development Containerfile with Air for hot reload
FROM docker.io/library/golang:1.25.4-alpine

WORKDIR /app

# Install system dependencies for Node.js
RUN apk add --no-cache nodejs npm

# Install Air for hot reload and templ for template generation
RUN go install github.com/air-verse/air@latest && \
    go install github.com/a-h/templ/cmd/templ@latest && \
    go install github.com/jackc/tern/v2@latest

# Copy package files and install dependencies
COPY package.json yarn.lock* ./
RUN npm install -g yarn && yarn install

# Copy go mod files
COPY go.mod go.sum* ./
RUN go mod download

# Copy source code
COPY . .

# Generate templ templates
RUN templ generate

EXPOSE 8080
EXPOSE 5173

# Set development environment
ENV ENV=development

# Run Air for hot reload
CMD ["air", "-c", ".air.toml"]
